<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.nathan.themoviedatabase.data.main.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_movieDetailsActivity"
            app:destination="@id/movieDetailsActivity" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.nathan.themoviedatabase.data.main.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_movieDetailsActivity"
            app:destination="@id/movieDetailsActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.nathan.themoviedatabase.presentation.movies.MainActivity"
        android:label="movie_activity"
        tools:layout="@layout/movie_activity" >
        <action
            android:id="@+id/action_mainActivity_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainActivity_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </activity>
    <activity
        android:id="@+id/movieDetailsActivity"
        android:name="com.nathan.themoviedatabase.presentation.details.MovieDetailsActivity"
        android:label="movie_details_activity"
        tools:layout="@layout/movie_details_activity" />

</navigation>